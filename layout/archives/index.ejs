<%- include('../_partials/navbar', { currentNav: 'archives' }) %>

<main>
  <section>
    <% Array.from(postsByMonthMap.entries()).forEach(([month, posts]) => { %>
    <details open>
      <summary>
        <span>&nbsp;&nbsp;<%= month %></span>
      </summary>
      <% for( let i = 0; i < posts.length; i++ ) { %>
        <a class="post-item" href="/posts/<%= posts[i].id %>">
          <div class="clearfix">
            <span class="float-left">
              <%= posts[i].title %>
            </span>
            <span class="float-right">
              <%= posts[i].created_at.substr(0, 10) %>
            </span>
          </div>
        </a>
      <% } %>
    </details>
    <% }) %>
  </section>
</main>