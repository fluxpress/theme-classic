<%- include('../_partials/navbar', { currentNav: '' }) %>

<main>
  <section>
    <div class="post-title"><%= title %></div>
    <div><%- content %></div>
  </section>
  
  <section>
    <% if (comments.length > 0) { %>
      <div>
        <% comments.forEach(comment => { %>
        <div>
          <img
            src="<%= comment.avatar %>"
            alt="user avatar"
            style="width: 20px; height: 20px"
          />
          <span><%= comment.username %></span>
          <p><%- comment.content %></p>
        </div>
        <% }) %>
      </div>
    <% } else { %>
      <div>
        没有评论。。。
      </div>
    <% } %>
     
  </section>
</main>